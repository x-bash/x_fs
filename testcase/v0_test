# shellcheck shell=sh disable=SC3043,SC2164

x log init x_fs
x ws install

test_cross_env() {
    for i in debian alpine centos; do
        x_fs_log info "Testing : " "$i"
        docker run -it -v "$(pwd)":/pd "xcmd/${i}-dev" bash -i -c "cd pd && . ./testcase/v0_test_base"
    done

    for i in 3 4 5 ; do
        x_fs_log info "Testing : " "bash${i}"
        docker run -it -v "$(pwd)":/pd "xcmd/bash${i}-dev" bash -i -c ". ~/.x-cmd/xrc/latest && cd pd && . ./testcase/v0_test_base"
    done
}

# run testcase
. ./testcase/v0_test_base
test_cross_env